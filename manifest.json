{
  "manifest_version": 3,
  "name": "TimeBlock - Focus Timer",
  "version": "0.1.0",
  "description": "Time-blocking timer with streaks and social features",
  
  "permissions": [
    "storage",
    "alarms"
  ],
  
  "action": {
    "default_popup": "popup/popup.html"
  },
  
  "background": {
    "service_worker": "background/background.js"
  }
}